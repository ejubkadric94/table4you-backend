# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /v1/                                                    controllers.Application.index()

# User
POST    /v1/register                                            controllers.UserController.register()
GET     /v1/registration/confirm/:registrationToken             controllers.UserController.confirm(registrationToken: String)
POST    /v1/login                                               controllers.UserController.login()

# Restaurants
GET     /v1/restaurants/:id                                     controllers.RestaurantController.getRestaurantDetails(id: Integer)
GET     /v1/restaurants                                         controllers.RestaurantController.getAllRestaurants(offset: Int ?= 0, limit: Int ?= 0, filter ?= null)

# Reservations
POST    /v1/restaurants/:id/reservations                        controllers.RestaurantController.makeReservation(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

