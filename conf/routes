# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /v1/                                                    controllers.Application.index()

# User
POST    /v1/registration                                        controllers.UserController.register()
GET     /v1/registration/confirm/:registrationToken             controllers.UserController.confirm(registrationToken: String)
POST    /v1/login                                               controllers.UserController.login()
GET     /v1/getCurrentUser                                      controllers.UserController.getCurrentUser()

# Restaurants
GET     /v1/restaurants/:photoId                                controllers.RestaurantController.getRestaurantDetails(photoId: Integer)
GET     /v1/restaurants                                         controllers.RestaurantController.getAllRestaurants(offset: Int ?= 0, limit: Int ?= 0, filter: String ?= null, order: String ?= null)
PUT     /v1/restaurants/:photoId                                controllers.RestaurantController.editRestaurant(photoId: Integer)
DELETE  /v1/restaurants/:photoId                                controllers.RestaurantController.deleteRestaurant(photoId: Integer)
POST    /v1/restaurants                                         controllers.RestaurantController.createRestaurant()


# Reservations
POST    /v1/restaurants/:photoId/reservations                   controllers.ReservationController.makeReservation(photoId: Integer)
GET     /v1/restaurants/:photoId/reservations                   controllers.ReservationController.getAllReservations(photoId: Integer)

# Reviews
POST    /v1/restaurants/:restaurantId/reviews                   controllers.RestaurantController.addReview(restaurantId: Integer)
GET     /v1/restaurants/:restaurantId/reviews                   controllers.RestaurantController.getReviews(restaurantId: Integer)

# Photo
POST    /v1/restaurants/:restaurantId/photos                    controllers.PhotoController.addPhoto(restaurantId: Integer)
PUT     /v1/restaurants/:restaurantId/photos/:photoId/default   controllers.PhotoController.markAsDefault(restaurantId: Integer, photoId: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

